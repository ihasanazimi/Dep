<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    app:title="@string/app_name"
                    app:titleTextColor="@color/white"
                    android:id="@+id/mainToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"/>
            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginVertical="@dimen/size_16dp"
                android:layout_marginHorizontal="@dimen/size_32dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/imageLoaderBtn"
                    app:cornerRadius="@dimen/size_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Load Images By 4 Libraries" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bannerSliderBtn"
                    android:layout_width="match_parent"
                    app:cornerRadius="@dimen/size_16dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Banner Slider By Frg" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recyclerViewSampleBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/size_16dp"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="RecyclerView Sample" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/FragmentSample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/size_16dp"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Sample Of Fragment - Pass Data" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialDesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/size_16dp"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Material Design Samples" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lottieAnimationView"
                    android:layout_width="match_parent"
                    app:cornerRadius="@dimen/size_16dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Animation" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/multiThreadingBtn"
                    android:layout_width="match_parent"
                    app:cornerRadius="@dimen/size_16dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Multi Threading" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/retrofitOkHttpBtn"
                    android:layout_width="match_parent"
                    app:cornerRadius="@dimen/size_16dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Retrofit - OkHttp Sample" />

            </LinearLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
