<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainFrame">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginVertical="@dimen/size_8dp"
            android:layout_marginHorizontal="@dimen/size_32dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/imageLoaderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_12sp"
                android:text="Load Images By 4 Libraries" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/bannerSliderBtn"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textAllCaps="false"
                 android:textSize="@dimen/text_size_12sp"
                 android:text="Banner Slider By Frg" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/recyclerViewSampleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_12sp"
                android:text="RecyclerView Sample" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/FragmentSample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_12sp"
                android:text="Sample Of Fragment - Pass Data" />

        </LinearLayout>

    </FrameLayout>
</layout>
